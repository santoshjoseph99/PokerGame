{
  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Debug Mocha Test",
      "type": "node",
      // Notice, we bypass the launcher and start the test runner directly
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": true,
      // run the tests in the test folder
      "args": [
        "test"
      ],
      "cwd": "${workspaceRoot}/.",
      "runtimeExecutable": null,
      "env": {}
    }
  ]
}